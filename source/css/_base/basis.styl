body {
  position relative
  min-height 100%
  font-size 14px
  font-family -apple-system,BlinkMacSystemFont,'Segoe UI','Helvetica Neue',Lato,Roboto,'PingFang SC','Microsoft YaHei',sans-serif
}

* {
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
}

a {
  color var(--sitio-basic-color)
  text-decoration none
  word-wrap break-word
  transition(all, .27s)
  overflow-wrap break-word
}

.pull-left {
  float left
}

.pull-right {
  float right
}

ul,
li,
ol {
  list-style-type none
  padding 0
  margin 0
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-size 100%
  margin 0
}

p {
  margin 0
}

::selection {
  background-color var(--sitio-font-hover)
  color #fff
}

a:hover {
  color var(--sitio-font-hover)
}
