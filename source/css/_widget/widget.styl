#web-bg {
  width 100%
  height 100%
  position fixed
  z-index -99
  animated(to_show, .4s)
}

#web-bg {
  background-color var(--sitio-global-bg)
  transition(all, $theme-switching - 0.2)
}

[data-theme=dark] #web-bg::before {
  content ""
  position absolute
  width 100%
  height 100%
  z-index -50
  background-color var(--sitio-global-bg)
}

[data-theme=dark] #web-bg {
  background-color var(--sitio-global-bg)
  animated(to_show, 0)
}
